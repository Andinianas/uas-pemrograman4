<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Daftar" >

    <TextView
        android:id="@+id/hargakosan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Registrasi Akun"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hargakosan"
        android:layout_below="@+id/hargakosan"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/namakosan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nama"
        android:layout_marginTop="39dp"
        android:text="Email" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/namakosan"
        android:layout_alignParentLeft="true"
        android:text="Nama" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/namakosan"
        android:layout_alignBottom="@+id/namakosan"
        android:layout_alignLeft="@+id/nama"
        android:ems="10"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/email"
        android:layout_below="@+id/fasilitas"
        android:layout_marginTop="40dp"
        android:text="Buat Akun" />

    <TextView
        android:id="@+id/alamatkosan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/namakosan"
        android:layout_below="@+id/email"
        android:layout_marginTop="39dp"
        android:text="Password" />

    <EditText
        android:id="@+id/fasilitas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/alamatkosan"
        android:layout_alignBottom="@+id/alamatkosan"
        android:layout_alignLeft="@+id/email"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword" />

</RelativeLayout>